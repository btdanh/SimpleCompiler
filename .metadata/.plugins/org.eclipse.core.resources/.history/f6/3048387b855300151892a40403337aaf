lexer grammar StringLexer;

fragment CHAR: (' ' .. '~') | '\"' | '\\' | '\'' | '\n' | '\t';
LSINGLE_QUOTE: ('\'' CHAR) -> more, mode (CHAR_MODE);
LDOUBLE_QUOTE: '"' -> more, mode (STRING_MODE);

mode CHAR_MODE;
CHAR_LITERAL: '\'' ->mode (DEFAULT_MODE), channel(100);


mode STRING_MODE;
STRING_LITERAL: '"' ->mode (DEFAULT_MODE), channel(100);
TEXT: CHAR -> more;